{
  "name": "lexys-desktop",
  "private": true,
  "version": "1.0.0",
  "description": "Sistema de Gesti√≥n Judicial para Paraguay",
  "author": "LexSys PY",
  "main": "dist-electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lexsys/lexys-desktop.git"
  },
  "build": {
    "appId": "com.lexsys.desktop",
    "productName": "Lexys Escritorio Juridico",
    "compression": "store",
    "asar": false,
    "directories": {
      "output": "dist",
      "buildResources": "src/renderer/assets"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "!src/**/*",
      "!*.ts",
      "!*.map"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/renderer/assets/logo.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/renderer/assets/logo.ico",
      "uninstallerIcon": "src/renderer/assets/logo.ico",
      "installerHeaderIcon": "src/renderer/assets/logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Lexys Escritorio Juridico",
      "runAfterFinish": true,
      "allowElevation": true,
      "perMachine": false,
      "differentialPackage": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "edisonroaa-code",
        "repo": "lexys-releases"
      }
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder",
    "dist": "tsc && vite build && electron-builder --win nsis --publish never --config.nsis.differentialPackage=false",
    "dist:release": "tsc && vite build && electron-builder --publish always"
  },
  "dependencies": {
    "@phosphor-icons/web": "^2.1.1",
    "@supabase/supabase-js": "^2.45.4",
    "bootstrap": "^5.3.3",
    "choices.js": "^10.2.0",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^24.10.1",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
